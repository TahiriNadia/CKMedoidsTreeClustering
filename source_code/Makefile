all: KMedoidsTreeClustering.cpp
	g++ KMedoidsTreeClustering.cpp -openmp -g -o KMTC
	chmod -R 777 * .
	@echo '===> ================================================================================================================================================='
	@echo '===> Program   : KMedoidsTreeClustering - 2017'
	@echo '===> Authors   : Nadia Tahiri and Vladimir Makarenkov (Universite du Quebec a Montreal)'
	@echo '===> This program computes a clustering of phylogenetic trees based on the k-medoids partitioning algorithm.'
	@echo '===> The set of trees in the Newick format should be provided as input.'
	@echo '===> The optimal partitioning in K classes is returned as output. The number of classes can be determined by the '
	@echo '===> Silhouette and Calinskiâ€“Harabasz cluster validity indices adapted for tree clustering. The non-squared and '
	@echo '===> squared Robinson and Foulds topological distance can be used. The recommended option: Silhouette + non-squared Robinson and Foulds distance.'
	@echo '===> ================================================================================================================================================='
	@echo ' '
	@echo "Please execute the following command line:"
	@echo '===> For trees: ./KMTC -tree input_file criterion'
	@echo ' '
	@echo 'Input_file - the input file for the program'
	@echo 'criterion - the criterion for the k-medoids algorithm (1, 2, 3 or 4, see below)'
	@echo ' '
	@echo 'List of criteria for the k-medoids algorithm:'
	@echo '===> criterion 1 - Calinski-Harabasz with RF (Robinson and Foulds distance)'
	@echo '===> criterion 2 - Calinski-Harabasz with RF-squared'
	@echo '===> criterion 3 - Silhouette with RF'
	@echo '===> criterion 4 - Silhouette with RF-squared'
	@echo ' '	
	@echo ' '	
	@echo '===> Command line execution:'
	@echo '===> ./KMTC -tree ../input/input.tre 3'
	
install: KMedoidsTreeClustering.cpp
	g++ KMedoidsTreeClustering.cpp -openmp -g -o KMTC
	chmod -R 777 * .
	@echo '===> ================================================================================================================================================='
	@echo '===> Program   : KMedoidsTreeClustering - 2017'
	@echo '===> Authors   : Nadia Tahiri and Vladimir Makarenkov (Universite du Quebec a Montreal)'
	@echo '===> This program computes a clustering of phylogenetic trees based on the k-medoids partitioning algorithm.'
	@echo '===> The set of trees in the Newick format should be provided as input.'
	@echo '===> The optimal partitioning in K classes is returned as output. The number of classes can be determined by the '
	@echo '===> Silhouette and Calinskiâ€“Harabasz cluster validity indices adapted for tree clustering. The non-squared and '
	@echo '===> squared Robinson and Foulds topological distance can be used. The recommended option: Silhouette + non-squared Robinson and Foulds distance.'
	@echo '===> ================================================================================================================================================='
	@echo ' '
	@echo "Please execute the following command line:"
	@echo '===> For trees: ./KMTC -tree input_file criterion'
	@echo ' '
	@echo 'Input_file - the input file for the program'
	@echo 'criterion - the criterion for the k-medoids algorithm (1, 2, 3 or 4, see below)'
	@echo ' '
	@echo 'List of criteria for the k-medoids algorithm:'
	@echo '===> criterion 1 - Calinski-Harabasz with RF (Robinson and Foulds distance)'
	@echo '===> criterion 2 - Calinski-Harabasz with RF-squared'
	@echo '===> criterion 3 - Silhouette with RF'
	@echo '===> criterion 4 - Silhouette with RF-squared'
	@echo ' '	
	@echo ' '	
	@echo '===> Command line execution:'
	@echo '===> ./KMTC -tree ../input/input.tre 3'
	
clean: 
	$(RM) *.o input_.txt
	
help: 
	@echo 'Please execute the following command lines (on two steps):'
	@echo '===> 1) make install'
	@echo '===> 2) For trees: ./KMTC -tree input_file criterion'
	@echo ' '
	@echo 'Input_file - the input file for the program'
	@echo 'criterion - the criterion for the k-medoids algorithm (1, 2, 3 or 4, see below)'
	@echo ' '
	@echo 'List of criteria for the k-medoids algorithm:'
	@echo '===> criterion 1 - Calinski-Harabasz with RF (Robinson and Foulds distance)'
	@echo '===> criterion 2 - Calinski-Harabasz with RF-squared'
	@echo '===> criterion 3 - Silhouette with RF'
	@echo '===> criterion 4 - Silhouette with RF-squared'
	@echo ' '	
	@echo '===> Command line execution:'
	@echo '===> ./KMTC -tree ../input/input.tre 3'
